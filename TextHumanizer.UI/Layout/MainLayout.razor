@inherits LayoutComponentBase

<div class="bg-animation">
    <div class="bg-orb bg-orb-1"></div>
    <div class="bg-orb bg-orb-2"></div>
    <div class="bg-orb bg-orb-3"></div>
</div>

<div class="app-container">
    <nav class="sidebar">
        <div class="sidebar-header">
            <div class="logo">
                <div class="logo-icon">
                    <svg viewBox="0 0 32 32" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <!-- Abstract "transform" symbol - rigid lines becoming fluid -->
                        <!-- Left side: rigid/digital lines -->
                        <path d="M4 8H12" stroke="url(#logo-grad)" stroke-width="2" stroke-linecap="round"/>
                        <path d="M4 14H10" stroke="url(#logo-grad)" stroke-width="2" stroke-linecap="round" opacity="0.7"/>
                        <path d="M4 20H8" stroke="url(#logo-grad)" stroke-width="2" stroke-linecap="round" opacity="0.4"/>
                        <!-- Right side: flowing organic curve -->
                        <path d="M14 8C18 8 20 12 20 16C20 20 22 24 28 24" stroke="url(#logo-grad)" stroke-width="2.5" stroke-linecap="round"/>
                        <!-- Transformation spark -->
                        <circle cx="14" cy="8" r="2.5" fill="url(#logo-grad)"/>
                        <circle cx="28" cy="24" r="2" fill="#60a5fa"/>
                        <defs>
                            <linearGradient id="logo-grad" x1="4" y1="8" x2="28" y2="24" gradientUnits="userSpaceOnUse">
                                <stop stop-color="#3B82F6"/>
                                <stop offset="1" stop-color="#60a5fa"/>
                            </linearGradient>
                        </defs>
                    </svg>
                </div>
                <span class="logo-text"><span class="logo-text-muted">Text</span><span class="logo-text-accent">Humanizer</span></span>
            </div>
        </div>

        <ul class="nav-menu">
            <li class="nav-item">
                <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                    <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                        <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                        <polyline points="9 22 9 12 15 12 15 22"></polyline>
                    </svg>
                    <span>Home</span>
                </NavLink>
            </li>
            <li class="nav-item">
                <NavLink class="nav-link" href="humanize">
                    <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                        <path d="M12 20h9"></path>
                        <path d="M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4L16.5 3.5z"></path>
                    </svg>
                    <span>Humanize</span>
                </NavLink>
            </li>
            <li class="nav-item">
                <NavLink class="nav-link" href="detect">
                    <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                        <circle cx="11" cy="11" r="8"></circle>
                        <path d="M21 21l-4.35-4.35"></path>
                    </svg>
                    <span>Detect AI</span>
                </NavLink>
            </li>
        </ul>

        <div class="sidebar-footer">
            <span class="version-badge">v1.0</span>
        </div>
    </nav>

    <main class="main-content">
        @Body
    </main>
</div>
