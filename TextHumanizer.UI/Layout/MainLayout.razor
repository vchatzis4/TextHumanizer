@inherits LayoutComponentBase

<div class="bg-animation">
    <div class="bg-orb bg-orb-1"></div>
    <div class="bg-orb bg-orb-2"></div>
    <div class="bg-orb bg-orb-3"></div>
</div>

<div class="app-container">
    <nav class="sidebar">
        <div class="sidebar-header">
            <div class="logo">
                <div class="logo-icon">
                    <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M4 6h6" stroke="white" stroke-width="2" stroke-linecap="round"/>
                        <path d="M4 10h4" stroke="white" stroke-width="2" stroke-linecap="round" opacity="0.6"/>
                        <path d="M4 14h2" stroke="white" stroke-width="2" stroke-linecap="round" opacity="0.3"/>
                        <path d="M10 6c3 0 5 3 5 6s2 6 6 6" stroke="white" stroke-width="2.5" stroke-linecap="round"/>
                        <circle cx="10" cy="6" r="2" fill="white"/>
                        <circle cx="21" cy="18" r="1.5" fill="white" opacity="0.8"/>
                    </svg>
                </div>
                <span class="logo-text"><span class="logo-text-muted">Text</span><span class="logo-text-accent">Humanizer</span></span>
            </div>
        </div>

        <ul class="nav-menu">
            <li class="nav-item">
                <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                    <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                        <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                        <polyline points="9 22 9 12 15 12 15 22"></polyline>
                    </svg>
                    <span>Home</span>
                </NavLink>
            </li>
            <li class="nav-item">
                <NavLink class="nav-link" href="humanize">
                    <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                        <path d="M12 20h9"></path>
                        <path d="M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4L16.5 3.5z"></path>
                    </svg>
                    <span>Humanize</span>
                </NavLink>
            </li>
            <li class="nav-item">
                <NavLink class="nav-link" href="detect">
                    <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                        <circle cx="11" cy="11" r="8"></circle>
                        <path d="M21 21l-4.35-4.35"></path>
                    </svg>
                    <span>Detect AI</span>
                </NavLink>
            </li>
        </ul>

        <div class="sidebar-footer">
            <span class="version-badge">v1.0</span>
        </div>
    </nav>

    <main class="main-content">
        @Body
    </main>
</div>
